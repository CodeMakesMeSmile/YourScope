<div class="card item-card shadow bg-white rounded programEntry" *ngIf="program">
    <h6 class="card-header">{{program.name}}</h6>
    <div class="job-postings card-body">
        <span class="bold">Post-Secondary Institution: </span>{{universityName}}
        <br />
        <span class="bold">Grade Range: </span>{{program.gradeRange}}
        <br />
        <span class="bold">Prerequisites: </span>{{program.prerequisites}}
        <br />
        <span class="bold">Language: </span>{{program.language}}
        <br />
        <a href="{{program.website}}">Link to Website</a>
    </div>
  </div>
  