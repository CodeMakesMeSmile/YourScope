<div id="bg" class="d-flex justify-content-center align-items-center vh-100">
    <div id="main-card" class="card text-center">
      <div class="card-body p-auto">
        <img id="logo" src="/assets/yourscope.png" alt="YourScope" />
          <p class="lead fs-3">New Event</p>
          <div class="form-group py-2">
            <input type="text" class="form-control" placeholder="Event Title" [(ngModel)]="title" [class.invalid-field]="missingTitle">
        </div>
        <div class="form-group py-2">
          <input type="date" class="form-control" placeholder="Event Date" [(ngModel)]="eventDate" [class.invalid-field]="missingDate" min="{{today}}">
        </div>
        <div class="form-group py-2">
            <input type="text" class="form-control" placeholder="Event Location" [(ngModel)]="location" [class.invalid-field]="missingLocation">
          </div>
        <div class="form-group py-2">
            <textarea type="text" class="form-control" placeholder="Event Description" [(ngModel)]="description" [class.invalid-field]="missingDesc"></textarea>
        </div>
        <div class="form-group py-2">
          <button (click)="submitForm()" type="submit" class="btn btn-primary button-lg ">
            Save
          </button>
          <button [routerLink]="['/admin/events']" class="btn button-lg">
            Cancel
          </button>
        </div>
        <label class="lblText">{{lblText}}</label>
    </div>
  </div>