@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');

.navbar-brand {
    font-style: italic;
}

nav {
    font-family: 'Inter', sans-serif;
    font-weight: 200;
    padding-right: 1%;
    padding-left: 1%;
}

.headingNavBar {
    vertical-align: center;
    text-align: center;
}

nav ul li {
    margin-left: 6%;
}
nav ul {
    margin-right: 1%;
}

.headingMission {
    font-weight: 900;
    font-family: 'Inter', sans-serif;
    text-align: center;
}

.parMission {
    margin-top: 1%;
    font-weight: 200;
    width: 75%;
    margin-left: 13%;
    font-size: 1.2em;
    text-align: center;
}

.mission {
    margin-top: 7%;
}

.courseImg img {
    width: 80%;
    border-radius: 10px;
    -webkit-box-shadow: -9px 10px 0px -1px #B5B5B5; 
    box-shadow: -9px 10px 0px -1px #B5B5B5;
}

.courseImg td {
    padding-bottom: 5%;
    text-align: center;
}

.courseImg {
    width: 100%;
    margin-top: 5%;
    margin-left: auto;
    margin-right: auto;
    display: block;
    overflow: hidden;
}

.split {
    width: 75%;
    margin-left: auto;
    margin-right: auto;
    font-family: 'Inter', sans-serif;
}

.split td {
    vertical-align: top;
    padding: 8%;
    width: 50%;
    overflow: hidden;
}

.split img {
    text-align: center;
    width: 75%;
}

.split p {
    line-height: 240%;
}

.split h2 {
    font-weight: bolder;
}

.rightAlign {
    text-align: right;
}

.imgSchool {
    width: 100% !important;
}