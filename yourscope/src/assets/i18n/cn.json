.inner-card {
    background-color: #F5F5F5;
    box-shadow: 0 4px 4px 0 #00000040 inset;
    width: calc(100% - 48px);
    height: calc(100% - 48px);
    margin: 24px auto;
    border-radius: 32px;
}

.popup-title {
    padding: 2px 24px;
    padding-top: 22px;
}

.popup-title-display {
    position: relative;
    width: 100%;
    height: 70px;
    overflow-y: scroll;
    overflow-x:  overlay;
    padding: 0;
    padding-bottom: 12px;
    border-bottom: solid 3px;
    scrollbar-width: none;

    h1 {
        position: absolute;
        width: max-content;
        max-height: 60px;
    }

    &::-webkit-scrollbar-track {
        height: 0;
        width: 0;
        background-color: #00000000;
    }

    &::-webkit-scrollbar-corner {
        height: 0;
        width: 0;
        background-color: #00000000;
    }

    &::-webkit-scrollbar {
        height: 0;
        width: 0;
    }
}

.scrollspy-container {
    position: absolute;
    top: 12px;
    left: 0;
    overflow: auto;
    width: calc(100% - 10px);
    height: 100%;
}

.flex {
    display: flex;
}

.wrap {
    flex-wrap: wrap;
}
  
.centre {
    align-items: center;
    justify-content: space-around;
}

h3 {
    margin: 6px 24px;
}

p {
    margin: 24px;
    margin-top: 0;
    font-size: 18px;
}

::-webkit-scrollbar-track {
    background: #F5F5F5; 
}