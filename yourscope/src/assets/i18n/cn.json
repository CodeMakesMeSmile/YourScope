.inner-card {
  background-color: #F5F5F5;
  box-shadow: 0 4px 4px 0 #00000040 inset;
  width: calc(100% - 48px);
  height: calc(100% - 96px);
  margin: 24px auto;
  margin-bottom: 18px;
  border-radius: 32px;
}

.inner-card-wrapper {
  height: 100%;
  width: 100%;
  padding-top: 12px;
  margin-bottom: 0;
  overflow: scroll;

  &::-webkit-scrollbar-track {
    background-color: #00000000;
  }

  &::-webkit-scrollbar-corner {
    background-color: #00000000;
  }
}

.popup-title {
  padding: 0 24px;
  padding-top: 24px;
}

h1 {
  padding-bottom: 12px;
  border-bottom: solid 3px;
}

h3 {
  margin: 6px 24px;
}

p {
  overflow: scroll;
  max-height: calc(100% - 160px);
  margin: 24px;
  font-size: 18px;

  &::-webkit-scrollbar-track {
    background-color: #00000000;
  }

  &::-webkit-scrollbar-corner {
    background-color: #00000000;
  }
}

.button-lg {
  color: white;
  text-align: center;
  width: 120px;
  background-color: rgb(42, 61, 104);
  border-radius: 20px;
  padding: 5px 0;
  text-decoration: none;
  bottom: 15px;
  left: 120px;
}

.flex {
  display: flex;
}

.centre {
  align-items: center;
  justify-content: space-around;
}

mat-form-field {
  height: 40px;
  width: 300px;
  margin-left: 24px;
  margin-bottom: 24px;
  font-size: 1.25rem;
  color: #0d6efd;
  background-color: #d3d3d3;
  border: 1px solid #0d6efd;
  border-radius: 0.5rem;

  input {
    background-color: white;
  }
}

.error {
  color: red;
  margin: 0;
}

button {
  display: flex;
  margin: auto;

}

form {
  width: calc(100% - 48px);
  margin: auto;
}

textarea {
  resize: vertical;
}