<form [formGroup]="studentForm" (ngSubmit)="handleStudentRegistration()">
    <p class="lead fs-3">Please enter your information</p>
    <div class="row py-2">
        <label>Full Name</label>
        <div class="col px-2">
            <input formControlName="fname" type="text" class="form-control" placeholder="First name" [class.invalid-text-input]="!validFName">
        </div>
        <!-- <div class="col px-2">
        <input type="text" class="form-control" placeholder="Middle name (optional)">
      </div> -->
        <div class="col px-2">
            <input formControlName="lname" type="text" class="form-control" placeholder="Last name" [class.invalid-text-input]="!validLName">
        </div>
    </div>
    <div class="form-group py-2">
        <label for="email">Email address</label>
        <input formControlName="email" type="email" class="form-control" id="email" placeholder="name@example.com" [class.invalid-text-input]="!validEmail"/>
    </div>
    <div class="form-group py-2">
        <label for="pass">Password</label>
        <input formControlName="pass" type="password" class="form-control" id="pass" placeholder="Password..." [class.invalid-text-input]="!validPassword">
    </div>
    <div class="form-group py-2">
        <label for="passConfirm">Confirm Password</label>
        <input formControlName="cpass" type="password" class="form-control" id="passConfirm" placeholder="Confirm Password..." [class.invalid-text-input]="!validCPassword">
    </div>
    <div class="row py-2 pb-4">
        <div class="col-6">
            <label for="inputSchool">School</label>
            <select formControlName="school" id="inputSchool" class="form-control" [class.invalid-text-input]="!validSchool">
              <option selected value="">Choose a school...</option>
              <option *ngFor="let school of schools">{{school.name}}</option>
            </select>
        </div>
        <div class="col-2">
            <label for="inputGrade">Grade</label>
            <select formControlName="grade" id="inputGrade" class="form-control" [class.invalid-text-input]="!validGrade">
                <option value="8">8 Or Lower</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option value="13">13+</option>
            </select>
        </div>
        <div class="col-4">
            <label for="start">Birthday:</label>
            <input formControlName="birthday" class="form-control" type="date" id="start" name="Birthday" min="2000-01-01" [class.invalid-text-input]="!validBirthday">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Register</button>
    <br />
    <label class="formErrors">{{formErrorStr}}</label>
</form>
